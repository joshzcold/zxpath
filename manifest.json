{
  "description": "like other xpath extension but with the purpose of generating usable web driver code for your preferred language",
  "manifest_version": 2,
  "name": "ZXPath",
  "version": "1.0",
  "homepage_url": "https://github.com/joshzcold/zxpath",

  "web_accessible_resources":["icons/*"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "all_frames": true,
      "run_at": "document_start",
      "css":
      [
        "lib/bootstrap-4.4.1-dist/css/bootstrap.min.css",
        "lib/main.css"
      ]
    }
  ],
  "background": {
    "scripts": ["background_scripts/background.js"]
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon.svg",
      "98": "icons/icon.svg"
    },
    "default_title": "ZXpath",
    "default_popup": "popup/tools.html"
  },
  "permissions": ["activeTab", "tabs","<all_urls>", "storage", "clipboardWrite"]
}
